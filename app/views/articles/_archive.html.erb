<% @archive.each do |year, articles| %>

  <div class="year">

    <%= year %>

    <% months = articles.group_by { |article| article.created_at.strftime("%b") } %>

    <% months.each do |month, articles| %>
      <%= link_to month, month_path(articles[0].created_at.strftime("%Y-%m")) %>
    <% end %>

  </div>

<% end %>
